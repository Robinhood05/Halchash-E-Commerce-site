# Enable rewrite engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    # Production: root directory, Local: /halchash/backend/
    # RewriteBase is auto-detected, but can be set if needed
    # RewriteBase /
</IfModule>

# Handle CORS headers
<IfModule mod_headers.c>
    # Set CORS headers for all requests
    # Note: PHP cors.php will override these with proper origin-specific headers
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS, PATCH"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, Accept, Origin"
    Header always set Access-Control-Max-Age "86400"
</IfModule>

# PHP settings
<IfModule mod_php7.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Prevent directory listing
Options -Indexes

# Protect sensitive files
<FilesMatch "\.(sql|log|ini)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Browser caching for backend static assets
<IfModule mod_expires.c>
    ExpiresActive On
    
    # API JSON responses - Short cache (5 minutes) for dynamic content
    ExpiresByType application/json "access plus 5 minutes"
    
    # Images in uploads - Long cache (1 year)
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
</IfModule>

# Cache-Control headers for backend
<IfModule mod_headers.c>
    # API responses - Short cache with revalidation
    <FilesMatch "\.(php)$">
        # Don't cache PHP files by default (they're dynamic)
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
    
    # Images in uploads - Long cache
    <FilesMatch "\.(jpg|jpeg|png|gif|webp)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
</IfModule>

